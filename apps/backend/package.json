{
  "name": "backend",
  "version": "0.0.1",
  "description": "Todo Calendar API built with Fastify",
  "author": "gytkk",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production LOG_LEVEL=info node dist/server.js",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@calendar-todo/shared-types": "file:../../packages/shared-types",
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@fastify/type-provider-typebox": "^5.0.0",
    "@prisma/client": "^6.13.0",
    "@sinclair/typebox": "^0.33.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^4.1.0",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "prisma": "^6.13.0",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.16.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.18.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "pino-pretty": "^11.3.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.39.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/test/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest.setup.ts"
    ],
    "testTimeout": 30000,
    "maxWorkers": 1,
    "forceExit": true,
    "detectOpenHandles": true
  }
}
