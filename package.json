{
  "name": "calendar-todo",
  "version": "0.1.0",
  "packageManager": "pnpm@10.14.0",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint --force",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:cov": "turbo test:cov",
    "test:watch": "turbo test:watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "quality": "turbo lint type-check",
    "quality:fix": "pnpm lint:fix && pnpm type-check",
    "clean": "turbo clean"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "latest",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}
