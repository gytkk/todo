{
  "name": "@calendar-todo/shared-types",
  "version": "0.1.0",
  "description": "Shared TypeScript types for calendar todo monorepo",
  "type": "module",
  "types": "src/index.ts",
  "files": [
    "src"
  ],
  "scripts": {
    "build": "tsc --noEmit",
    "dev": "tsc --noEmit --watch",
    "type-check": "tsc --noEmit",
    "lint": "echo \"No linting needed for types-only package\"",
    "clean": "echo \"No build artifacts to clean\""
  },
  "dependencies": {},
  "devDependencies": {
    "typescript": "^5",
    "@types/react": "^19"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts"
    },
    "./auth": {
      "types": "./src/auth.ts"
    },
    "./todo": {
      "types": "./src/todo.ts"
    },
    "./app": {
      "types": "./src/app.ts"
    },
    "./settings": {
      "types": "./src/settings.ts"
    }
  }
}
